    <Grid RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <templates:VideosTemplate x:Name="myVideosTemplate" />



        <!--تجريب-->
