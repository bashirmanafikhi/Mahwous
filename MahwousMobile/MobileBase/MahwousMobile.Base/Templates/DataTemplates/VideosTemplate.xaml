<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:templates="clr-namespace:MahwousMobile.Base.Templates.DataTemplates"
             xmlns:vm="clr-namespace:MahwousMobile.Base.ViewModels" 
             xmlns:helpers="clr-namespace:MahwousMobile.Base.Helpers"
             mc:Ignorable="d"
             x:Class="MahwousMobile.Base.Templates.DataTemplates.VideosTemplate"
             Visual="Material">


    <RefreshView IsRefreshing="{Binding IsBusy, Mode=TwoWay}" Command="{Binding LoadVideosCommand}">

        <StackLayout>
            <CollectionView x:Name="ItemsCollectionView"
                            RemainingItemsThreshold="{Binding ItemTreshold}"
                            RemainingItemsThresholdReachedCommand="{Binding LoadMoreVideosCommand}"
                            ItemTemplate="{DataTemplate templates:VideoTemplate}"
                            ItemsSource="{Binding Videos}">

            </CollectionView>
            <ActivityIndicator IsVisible="{Binding IsLoadingMore}" IsRunning="{Binding IsLoadingMore}"
                       Color="{DynamicResource colRed}"/>


        </StackLayout>
    </RefreshView>

</ContentView>