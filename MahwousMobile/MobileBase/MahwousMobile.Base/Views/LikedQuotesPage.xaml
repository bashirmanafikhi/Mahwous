<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MahwousMobile.Base.ViewModels"
             x:Class="MahwousMobile.Base.Views.LikedQuotesPage"
             xmlns:templates="clr-namespace:MahwousMobile.Base.Templates.DataTemplates"
             Title="اقتباسات أعجبتك">

    <ContentPage.BindingContext>
        <vm:LikedQuotesViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout>

            <CollectionView x:Name="ItemsCollectionView"
                            ItemTemplate="{DataTemplate templates:QuoteTemplate}"
                            ItemsSource="{Binding Quotes}" />

            <ActivityIndicator IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}"
                       Color="{DynamicResource colRed}"/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>