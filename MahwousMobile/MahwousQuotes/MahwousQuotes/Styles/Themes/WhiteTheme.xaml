    <!--Colors-->
    <Color x:Key="NavigationPrimary">#FF2d4059</Color>

    <!--#region Color Range-->
    <Color x:Key="colPrim">#FFea5455</Color>
    <Color x:Key="colSec">#FFdecdc3</Color>
    <Color x:Key="colTer">#FF56565A</Color>
    <Color x:Key="colQua">#FFFFFFFF</Color>
    <Color x:Key="colQui">#FF000000</Color>
