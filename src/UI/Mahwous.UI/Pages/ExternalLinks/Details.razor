@page "/externalLinks/{id:int}"
@inject MahwousRepositories repositories


<div class="container">
    <div class="card my-4">

        <div class="card-header">

        </div>

        <div class="card-body">
            @if (externalLink != null)
            {
                <div class="card text-center">
                    <div class="card-header p-0">
                        <img src="@externalLink.CoverPath" style="height: auto; width: auto; max-height: 100%;  max-height: 260px; object-fit: cover" />
                    </div>
                    <div class="card-body">
                        <h4 class="card-title">@externalLink.Name</h4>
                        <span class="card-text">@externalLink.Description</span>
                        <p>@externalLink.LinkType</p>
                    </div>

                    <div class="card-footer">
                        <AuthorizeView>
                            <Authorized>
                                <a class="btn btn-info" href="administration/externalLinks/edit/@externalLink.Id">تعديل</a>
                            </Authorized>
                        </AuthorizeView>
                        <a class="btn btn-info" href="externalLinks">رجوع</a>
                    </div>
                </div>
            }
            else
            {
                <p><i class="fas fa-spin fa-spinner"></i> جاري تحميل معلومات الرابط </p>
            }
        </div>

        <div class="card-footer">

        </div>

    </div>
</div>



@code {
    [Parameter] public int id { get; set; }
    GetExternalLinkDetailsResponse externalLink;

    protected async override Task OnParametersSetAsync()
    {
        externalLink = await repositories.ExternalLinkRepository.GetDetails(id);
    }
}
