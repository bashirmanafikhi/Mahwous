@page "/administration/apps/create"
@layout AdminLayout
@attribute [Authorize]
@inject MahwousRepositories repositories
@inject NavigationManager navigation
@using Mahwous.Service.ViewModels.MobileApps

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">تطبيق جديد</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active">اضافة تطبيق</li>
                    <li class="breadcrumb-item"><a href="administration/apps">التطبيقات</a></li>
                    <li class="breadcrumb-item"><a href="administration">الإدارة</a></li>
                    <li class="breadcrumb-item"><a href="">الصفحة الرئيسية</a></li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">

        <AppForm ButtonText="إضافة تطبيق" App="app" OnValidSubmit="CreateApp" />

    </div>
</div>

@code {
    MobileApp app = new MobileApp();

    protected async override Task OnInitializedAsync()
    {
        // to give tokens to api :)
        //await authorizer.SetAuthorizationAsync();
    }

    async Task CreateApp(Stream imageFile)
    {
        try
        {
            var command = new CreateMobileAppCommand
            {
                Name = app.Name,
                Cover = imageFile
            };
            await repositories.MobileAppsRepository.Create(command);
            navigation.NavigateTo("administration/apps");

        }
        catch (Exception ex)
        {
            Console.WriteLine("Error: " + ex.Message);
        }
    }
}