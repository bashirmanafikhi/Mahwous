@page "/administration/chatRooms/create"
@layout AdminLayout
@attribute [Authorize]
@inject MahwousRepositories repositories
@inject NavigationManager navigation
@using Mahwous.Service.ViewModels.ChatRooms

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">غرفة دردشة جديد</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active">اضافة غرفة دردشة</li>
                    <li class="breadcrumb-item"><a href="administration/chatRooms">غرف الدردشة</a></li>
                    <li class="breadcrumb-item"><a href="administration">الإدارة</a></li>
                    <li class="breadcrumb-item"><a href="">الصفحة الرئيسية</a></li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">

        <ChatRoomForm ButtonText="إضافة غرفة دردشة" ChatRoom="chatRoom" OnValidSubmit="CreateChatRoom" />

    </div>
</div>

@code {
    ChatRoom chatRoom = new ChatRoom();

    protected async override Task OnInitializedAsync()
    {
        // to give tokens to api :)
        //await authorizer.SetAuthorizationAsync();
    }

    async Task CreateChatRoom(Stream imageFile)
    {
        try
        {
            CreateChatRoomCommand command = new CreateChatRoomCommand();
            command.Description = chatRoom.Description;
            command.Name = chatRoom.Name;
            command.Cover = imageFile;
            await repositories.ChatRoomRepository.Create(command);
            navigation.NavigateTo("administration/chatRooms");

        }
        catch (Exception ex)
        {
            Console.WriteLine("Error: " + ex.Message);
        }
    }
}