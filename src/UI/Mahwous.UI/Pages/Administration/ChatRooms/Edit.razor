@page "/administration/chatRooms/edit/{chatRoomId:int}"
@layout AdminLayout
@attribute [Authorize]
@inject MahwousRepositories repositories
@inject NavigationManager navigation
@using Mahwous.Service.ViewModels.ChatRooms



<!-- Description Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">تعديل الغرفة دردشة</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active">تعديل غرفة الدردشة</li>
                    <li class="breadcrumb-item"><a href="administration/chatRooms">غرف الدردشات</a></li>
                    <li class="breadcrumb-item"><a href="administration">الإدارة</a></li>
                    <li class="breadcrumb-item"><a href="">الصفحة الرئيسية</a></li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">


        @*<ChatRoomForm ButtonText="تعديل الغرفة دردشة" ChatRoom="chatRoom" OnValidSubmit="@EditChatRoom" />*@

    </div>
</div>

@code {
    [Parameter] public int chatRoomId { get; set; }
    GetChatRoomDetailsResponse chatRoom = new GetChatRoomDetailsResponse();

    protected override async Task OnInitializedAsync()
    {
        // to give tokens to api :)
        //await authorizer.SetAuthorizationAsync();
    }

    protected async override Task OnParametersSetAsync()
    {
        chatRoom = await repositories.ChatRoomRepository.GetDetails(chatRoomId);
    }

    async Task EditChatRoom(Stream imageFile)
    {
        try
        {
            UpdateChatRoomCommand command = new UpdateChatRoomCommand();
            command.Id = chatRoom.Id;
            command.Name = chatRoom.Name;
            command.Description = chatRoom.Description;
            command.Cover = imageFile;
            await repositories.ChatRoomRepository.Update(command);
            navigation.NavigateTo("administration/chatRooms");

        }
        catch (Exception ex)
        {
            Console.WriteLine("Error: " + ex.Message);
        }
    }
}
