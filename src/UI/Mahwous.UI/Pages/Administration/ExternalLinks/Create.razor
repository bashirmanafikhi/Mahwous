@page "/administration/externalLinks/create"
@layout AdminLayout
@attribute [Authorize]
@inject MahwousRepositories repositories
@inject NavigationManager navigation
@using Mahwous.Service.ViewModels.ExternalLinks

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">رابط جديد</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active">اضافة رابط</li>
                    <li class="breadcrumb-item"><a href="administration/externalLinks">الروابط</a></li>
                    <li class="breadcrumb-item"><a href="administration">الإدارة</a></li>
                    <li class="breadcrumb-item"><a href="">الصفحة الرئيسية</a></li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">

        <ExternalLinkForm ButtonText="إضافة رابط" ExternalLink="externalLink" OnValidSubmit="CreateExternalLink" />

    </div>
</div>

@code {
    ExternalLink externalLink = new ExternalLink();

    protected async override Task OnInitializedAsync()
    {
        // to give tokens to api :)
        //await authorizer.SetAuthorizationAsync();
    }

    async Task CreateExternalLink(Stream imageFile)
    {
        try
        {
            CreateExternalLinkCommand command = new CreateExternalLinkCommand();
            command.Name = externalLink.Name;
            command.Description = externalLink.Description;
            command.LinkType = externalLink.LinkType;
            command.Url = externalLink.Url;
            command.Cover = imageFile;
            await repositories.ExternalLinkRepository.Create(command);
            navigation.NavigateTo("administration/externalLinks");

        }
        catch (Exception ex)
        {
            Console.WriteLine("Error: " + ex.Message);
        }
    }
}