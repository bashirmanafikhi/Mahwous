@page "/administration/categories/create"
@layout AdminLayout
@attribute [Authorize]
@inject MahwousRepositories repositories
@inject NavigationManager navigation

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">تصنيف جديد</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active">اضافة تصنيف</li>
                    <li class="breadcrumb-item"><a href="administration/categories">التصنيفات</a></li>
                    <li class="breadcrumb-item"><a href="administration">الإدارة</a></li>
                    <li class="breadcrumb-item"><a href="">الصفحة الرئيسية</a></li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">


        <CategoryForm ButtonText="إضافة تصنيف" Category="category"
                      OnValidSubmit="CreateCategory" />


    </div>
</div>


@code {
    Category category = new Category();

    protected override async Task OnInitializedAsync()
    {
        // to give tokens to api :)
        //await authorizer.SetAuthorizationAsync();
    }

    async Task CreateCategory(Stream imageFile)
    {
        try
        {
            await repositories.CategoriesRepository.Add(category, imageFile);
            navigation.NavigateTo("administration/categories");

        }
        catch (Exception ex)
        {
            Console.WriteLine("Error: " + ex.Message);
        }
    }
}