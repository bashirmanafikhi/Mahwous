@page "/administration/images/create"
@layout AdminLayout
@attribute [Authorize]
@inject MahwousRepositories repositories
@inject NavigationManager navigation


<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">صورة جديدة</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active">اضافة صورة</li>
                    <li class="breadcrumb-item"><a href="administration/images">الصور</a></li>
                    <li class="breadcrumb-item"><a href="administration">الإدارة</a></li>
                    <li class="breadcrumb-item"><a href="">الصفحة الرئيسية</a></li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">

        @if (NotSelectedCategories != null)
        {
            <ImageForm ButtonText="إضافة صورة" Image="image"
                       OnValidSubmit="CreateImage" NotSelectedCategories="NotSelectedCategories" />
        }
    </div>
</div>


@code {
    ImageStatus image = new ImageStatus();


    private List<Category> NotSelectedCategories;

    protected override async Task OnInitializedAsync()
    {
        CategoryFilter filter = new CategoryFilter();
        filter.ForImages = true;

        var paginatedResponse = await repositories.CategoriesRepository.GetFiltered(filter);
        NotSelectedCategories = paginatedResponse.Response.ToList();


        // to give tokens to api :)
        //await authorizer.SetAuthorizationAsync();
    }

    async Task CreateImage(Stream imageFile)
    {
        try
        {
            //await repositories.ImagesRepository.Add(image);
            await repositories.ImagesRepository.Add(image, imageFile);
            navigation.NavigateTo("administration/images");

        }
        catch (Exception ex)
        {
            Console.WriteLine("Error: " + ex.Message);
        }
    }

}