@page "/administration/notifications/create"
@layout AdminLayout
@attribute [Authorize]
@inject HttpAuthorizer authorizer
@inject INotificationRepository notificationRepository
@inject NavigationManager navigation

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">اشعار جديد</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active">اضافة إشعار</li>
                    <li class="breadcrumb-item"><a href="administration/notifications">الإشعارات</a></li>
                    <li class="breadcrumb-item"><a href="administration">الإدارة</a></li>
                    <li class="breadcrumb-item"><a href="">الصفحة الرئيسية</a></li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">

        <NotificationForm ButtonText="إضافة اشعار" Notification="notification" OnValidSubmit="CreateNotification" />

    </div>
</div>

@code {
    Notification notification = new Notification();

    protected async override Task OnInitializedAsync()
    {
        // to give tokens to api :)
        await authorizer.SetAuthorizationAsync();
    }

    async Task CreateNotification()
    {
        try
        {
            await notificationRepository.Add(notification);
            navigation.NavigateTo("administration/notifications");

        }
        catch (Exception ex)
        {
            Console.WriteLine("Error: " + ex.Message);
        }
    }
}