@page "/administration/categories/edit/{categoryId:int}"
@layout AdminLayout
@attribute [Authorize]
@inject MahwousRepositories repositories
@inject NavigationManager navigation

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">تعديل التصنيف</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active">تعديل التصنيف</li>
                    <li class="breadcrumb-item"><a href="administration/categories">التصنيفات</a></li>
                    <li class="breadcrumb-item"><a href="administration">الإدارة</a></li>
                    <li class="breadcrumb-item"><a href="">الصفحة الرئيسية</a></li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">


        <CategoryForm ButtonText="تعديل التصنيف" Category="category"
                      OnValidSubmit="@EditCategory" />

    </div>
</div>

@code {
    [Parameter] public int categoryId { get; set; }
    Category category = new Category();

    protected override async Task OnInitializedAsync()
    {
        // to give tokens to api :)
        //await authorizer.SetAuthorizationAsync();
    }

    protected async override Task OnParametersSetAsync()
    {
        category = await repositories.CategoriesRepository.Get(categoryId);
    }

    async Task EditCategory()
    {
        try
        {
            await repositories.CategoriesRepository.Update(category);
            navigation.NavigateTo("administration/categories");

        }
        catch (Exception ex)
        {
            Console.WriteLine("Error: " + ex.Message);
        }
    }
}
