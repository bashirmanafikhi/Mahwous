@page "/administration/posts"
@layout AdminLayout
@attribute [Authorize]

@inject IJSRuntime js
@inject NavigationManager navigation
@inject IPostRepository postRepository
@inject HttpAuthorizer authorizer

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>المنشورات والأخبار</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active">المنشورات</li>
                    <li class="breadcrumb-item"><a href="administration">الإدارة</a></li>
                    <li class="breadcrumb-item"><a href="">الصفحة الرئيسية</a></li>
                </ol>
            </div>
        </div>
    </div>
</section>


<section class="content">
    <div class="container-fluid">
        <div class="row">

            <div class="col-lg-9">


                <div class="card">
                    <div class="card-header">
                        <Pagination CurrentPage="@paginationDTO.Page" TotalAmountPages="totalAmountPages"
                                    SelectedPage="SelectedPage" />
                    </div>

                    <div class="card-body">

                        <div>

                            @if (posts == null)
                            {
                                <p>جاري تحميل المنشورات...</p>
                            }
                            else if (posts.Count == 0)
                            {
                                <p> لا يوجد منشورات! </p>
                            }
                            else
                            {
                                <div class="content">
                                    <div class="container-fluid">
                                        <div class="row">
                                            @foreach (var post in posts)
                                            {
                                                <div class="col-md-4">
                                                    <div class="card">
                                                        <div class="card-header p-0">
                                                            <img src="@post.ImagePath" style="height:auto; width:100%; object-fit:cover" />
                                                        </div>
                                                        <div class="card-body">
                                                            <h4 class="card-title">@post.Title</h4>
                                                            <h5 class="card-text">@post.Content</h5>
                                                        </div>
                                                        <div class="card-footer">
                                                            <div class="stats">
                                                                <button class="btn btn-danger" @onclick="@(() => DeletePost(post.Id))">حذف</button>
                                                                <a class="btn btn-info" href="administration/posts/edit/@post.Id">تعديل</a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>

                            }
                        </div>

                    </div>

                    <div class="card-footer">
                        <Pagination CurrentPage="@paginationDTO.Page" TotalAmountPages="totalAmountPages"
                                    SelectedPage="SelectedPage" />
                    </div>
                </div>

            </div>



            <div class="col-lg-3">
                <a href="administration/posts/create" class="btn btn-primary btn-block mb-3">اضافة منشور جديد</a>
            </div>
        </div>
    </div>
</section>





@code {

    List<MahwousWeb.Shared.Models.Post> posts { get; set; }

    PaginationDTO paginationDTO = new PaginationDTO();
    int totalAmountPages;


    protected async override Task OnInitializedAsync()
    {
        await authorizer.SetAuthorizationAsync();
        await LoadPosts();
    }

    async Task LoadPosts()
    {
        try
        {
            var paginatedResponse = await postRepository.GetPosts(paginationDTO);
            posts = paginatedResponse.Response;
            totalAmountPages = paginatedResponse.TotalAmountPages;

        }
        catch (Exception ex)
        {
            Console.WriteLine("Error: " + ex.Message);
        }
    }

    async Task DeletePost(int postId)
    {
        var post = posts.First(x => x.Id == postId);
        if (await js.Confirm("تأكيد", $"هل أنت متأكد أنك تريد أن تحذف هذا المنشور ؟", SweetAlertMessageType.error))
        {
            await postRepository.Delete(postId);
            await LoadPosts();
        }
    }

    private async Task SelectedPage(int page)
    {
        await LoadPosts();
    }
}
