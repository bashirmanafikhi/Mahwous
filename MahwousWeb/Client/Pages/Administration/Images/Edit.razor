@page "/administration/images/edit/{imageId:int}"
@layout AdminLayout
@attribute [Authorize]
@inject MahwousRepositories repositories
@inject NavigationManager navigation


<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">تعديل الصورة</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active">تعديل صورة</li>
                    <li class="breadcrumb-item"><a href="administration/images">الصور</a></li>
                    <li class="breadcrumb-item"><a href="administration">الإدارة</a></li>
                    <li class="breadcrumb-item"><a href="">الصفحة الرئيسية</a></li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">



        @if (NotSelectedCategories != null)
        {
            <ImageForm ButtonText="تعديل الصورة" Image="image"
                       OnValidSubmit="@EditImage" NotSelectedCategories="NotSelectedCategories" SelectedCategories="SelectedCategories" />
        }

    </div>
</div>

@code {
    [Parameter] public int imageId { get; set; }
    ImageStatus image = new ImageStatus();

    protected override async Task OnInitializedAsync()
    {
        // to give tokens to api :)
        //await authorizer.SetAuthorizationAsync();
    }

    protected async override Task OnParametersSetAsync()
    {
        image = await repositories.ImagesRepository.Get(imageId);

        CategoryFilter filter = new CategoryFilter();
        filter.ForImages = true;
        filter.Pagination.RecordsPerPage = 100;

        SelectedCategories = image.StatusCategories.Select(sc => sc.Category).ToList();
        var categories = (await repositories.CategoriesRepository.GetFiltered(
            filter
            )).Response;

        NotSelectedCategories = categories.Where(c =>
                !SelectedCategories
                .Select(c => c.Id)
                .Contains(c.Id)
            ).ToList();
    }

    async Task EditImage(Stream imageFile)
    {
        try
        {
            await repositories.ImagesRepository.Update(image, imageFile);
            navigation.NavigateTo("administration/images");

        }
        catch (Exception ex)
        {
            Console.WriteLine("Error: " + ex.Message);
        }
    }




    private List<Category> NotSelectedCategories;

    private List<Category> SelectedCategories;
}
