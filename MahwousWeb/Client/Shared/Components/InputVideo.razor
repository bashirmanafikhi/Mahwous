@using System.IO

<div>
    <label>@Label</label>
    <div>
        <InputFile OnChange="InputFileChange"  accept="video/mp4,video/x-m4v,video/*" />
    </div>
</div>
<div>
    @if (videoBase64 != null)
    {
            <div style="margin:10px">
                <video src="data:video/webm;base64, @videoBase64" style="width: 400px;" controls />
            </div>
    }

</div>

@code {
    [Parameter] public string Label { get; set; } = "Video";
    [Parameter] public EventCallback<string> OnSelectedVideo { get; set; }

    private string videoBase64;

    async Task InputFileChange(InputFileChangeEventArgs e)
    {
        var browserFile = e.File;

        var buffer = new byte[browserFile.Size];
        await browserFile.OpenReadStream().ReadAsync(buffer);

        videoBase64 = Convert.ToBase64String(buffer);
        await OnSelectedVideo.InvokeAsync(videoBase64);
    }

}